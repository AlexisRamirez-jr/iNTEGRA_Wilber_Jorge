@model iNTEGRA_Wilber_Jorge.DTO.EmpleadosDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>Datos empleado</h3>
    <hr />

<div class="section-to-print border">
    <dl class="row ml-1 mt-2">
        <dt class="col-sm-4">
            <img id="img-upload" src="~/img/Empleado/@Model.RutaImg" />
        </dt>
        <dd class="col-sm-8">

        </dd>
        
    </dl>
    <dl class="row ml-1 mt-2">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellidos):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellidos)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombres):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombres)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Correo):
        </dt>
        <dd class="col-sm-10 no-hipervinculo">
            @Html.DisplayFor(model => model.Correo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FormatoFecha):
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FormatoFecha)
        </dd>
    </dl>
</div>
<div id="section-no-print">
    <a asp-action="Edit" asp-route-id="@Model.IdEmpleado">Actualizar</a> |
    <a asp-action="Index">Volver</a>
</div>
<script type="text/javascript">
    $(document).ready(function () {

        window.print();
    });
</script>